{
    "name": "CANServer Development Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.makefile-tools"
            ],
            "settings": {
                "C_Cpp.default.compilerPath": "/usr/bin/g++",
                "C_Cpp.default.cppStandard": "c++20",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-x64"
            }
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    "workspaceFolder": "/workspace",
    "remoteUser": "vscode",
    //"postCreateCommand": "sudo modprobe vcan || true", //for testing
    "forwardPorts": [8828, 50123],
    "capAdd": [
        "NET_RAW",
        "SYS_NICE" //only used for real-time scheduling of CAN threads. can disable
        //,"NET_ADMIN" for vcan testing
    ],
    "runArgs": [
        "--privileged", //can disable if necessary
        "--network=host"
    ]
}