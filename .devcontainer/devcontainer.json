{
    "name": "CANServer Development Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "target": "builder"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.makefile-tools"
            ],
            "settings": {
                "C_Cpp.default.compilerPath": "/usr/bin/g++",
                "C_Cpp.default.cppStandard": "c++20",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-x64"
            }
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    "workspaceFolder": "/workspace",
    "remoteUser": "canuser",
    //"postCreateCommand": "sudo modprobe vcan && sudo ip link add dev vcan0 type vcan && sudo ip link set up vcan0 || true",
    "forwardPorts": [8828, 50123],
    "capAdd": [
        "NET_RAW"
        //"SYS_NICE",
        //"NET_ADMIN"
    ],
    "runArgs": [
        //"--privileged",
        "--network=host"
    ]
}